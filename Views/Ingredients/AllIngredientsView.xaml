<UserControl x:Class="RestaurantApp.Views.AllIngredientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:RestaurantApp.Views.Shared"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <shared:ListPageShell
        Title="Składniki"
        CountText="{Binding Ingredients.Count, StringFormat='Liczba składników: {0}'}">

        <DataGrid ItemsSource="{Binding Ingredients}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding IngredientId}"
                                    Width="60" />

                <DataGridTextColumn Header="Nazwa"
                                    Binding="{Binding Name}"
                                    Width="*" />

                <DataGridCheckBoxColumn Header="Alergen"
                                        Binding="{Binding IsAllergen}"
                                        Width="80" />

                <DataGridTextColumn Header="Jednostka"
                                    Binding="{Binding Unit}"
                                    Width="100" />
            </DataGrid.Columns>
        </DataGrid>

    </shared:ListPageShell>
</UserControl>
