<UserControl x:Class="RestaurantApp.Views.AllOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:shared="clr-namespace:RestaurantApp.Views.Shared">

    <shared:ListPageShell Title="Zamówienia"
                          CountText="{Binding Orders.Count, StringFormat='Liczba zamówień: {0}'}">

        <shared:ListPageShell.ToolbarContent>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text=" " VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="Dodaj zamówienie"
                        Width="160"
                        Command="{Binding AddOrderCommand}" />
            </Grid>
        </shared:ListPageShell.ToolbarContent>

        <DataGrid ItemsSource="{Binding Orders}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="70"/>
                <DataGridTextColumn Header="Stolik" Binding="{Binding TableId}" Width="80"/>
                <DataGridTextColumn Header="Kelner" Binding="{Binding WaiterId}" Width="80"/>
                <DataGridTextColumn Header="Data" Binding="{Binding OrderDateTime, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="160"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Suma" Binding="{Binding TotalAmount, StringFormat=\{0:C\}}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

    </shared:ListPageShell>
</UserControl>
