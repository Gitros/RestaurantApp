<UserControl x:Class="RestaurantApp.Views.Shared.ListPageShell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">

    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="2,0,2,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Title, ElementName=Root}"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource PrimaryBrush}"
                       VerticalAlignment="Center" />

            <Border Grid.Column="1"
                    Background="#11000000"
                    CornerRadius="10"
                    Padding="10,4"
                    VerticalAlignment="Center"
                    Margin="12,0,0,0">
                <TextBlock Text="{Binding CountText, ElementName=Root}"
                           Foreground="Gray"
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- TOOLBAR -->
        <Border Grid.Row="1"
                Background="{StaticResource PrimaryLightBrush}"
                CornerRadius="6"
                Padding="8"
                Margin="0,0,0,10"
                BorderBrush="#1A000000"
                BorderThickness="1">
            <ContentPresenter Content="{Binding ToolbarContent, ElementName=Root}">
                <ContentPresenter.Style>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <Trigger Property="Content" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ContentPresenter.Style>
            </ContentPresenter>
        </Border>

        <!-- CONTENT -->
        <Border Grid.Row="2"
        Margin="1"
        ClipToBounds="True"
        Background="White"
        CornerRadius="6"
        BorderBrush="#FFD0D3D4"
        BorderThickness="1"
        Padding="6">
            <ContentPresenter Content="{Binding Body, ElementName=Root}" />
        </Border>

    </Grid>
</UserControl>
