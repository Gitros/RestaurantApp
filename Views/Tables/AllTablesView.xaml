<UserControl x:Class="RestaurantApp.Views.AllTablesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:shared="clr-namespace:RestaurantApp.Views.Shared">

    <shared:ListPageShell Title="Stoliki"
                          CountText="{Binding Tables.Count, StringFormat='Liczba stolików: {0}'}">

        <shared:ListPageShell.ToolbarContent>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text=" " />

                <Button Grid.Column="1"
                        Content="Dodaj stolik"
                        Width="140"
                        Command="{Binding AddTableCommand}" />
            </Grid>
        </shared:ListPageShell.ToolbarContent>

        <DataGrid ItemsSource="{Binding Tables}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TableId}" Width="60" />
                <DataGridTextColumn Header="Strefa" Binding="{Binding AreaName}" Width="*" />
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Miejsca" Binding="{Binding SeatsCount}" Width="90" />
                <DataGridCheckBoxColumn Header="Aktywny" Binding="{Binding IsActive}" Width="80" />
            </DataGrid.Columns>
        </DataGrid>

    </shared:ListPageShell>
</UserControl>
