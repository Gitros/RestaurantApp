<UserControl x:Class="RestaurantApp.Views.AllAreasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:shared="clr-namespace:RestaurantApp.Views.Shared">

    <shared:ListPageShell Title="Strefy"
                      CountText="{Binding Areas.Count, StringFormat='Liczba stref: {0}'}">

        <shared:ListPageShell.ToolbarContent>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text=" "
                       VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                    Content="Dodaj strefę"
                    Width="140"
                    Command="{Binding AddAreaCommand}" />
            </Grid>
        </shared:ListPageShell.ToolbarContent>

        <DataGrid ItemsSource="{Binding Areas}" IsReadOnly="True">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID" Binding="{Binding AreaId}" Width="60" />
				<DataGridTextColumn Header="Restauracja" Binding="{Binding RestaurantName}" Width="*" />
				<DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*" />
				<DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="2*" />
			</DataGrid.Columns>
		</DataGrid>

	</shared:ListPageShell>
</UserControl>
