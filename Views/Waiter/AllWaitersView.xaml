<UserControl x:Class="RestaurantApp.Views.AllWaitersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:RestaurantApp.Views.Shared"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

	<shared:ListPageShell
        Title="Kelnerzy"
        CountText="{Binding Waiters.Count, StringFormat='Liczba kelnerów: {0}'}">

		<DataGrid ItemsSource="{Binding Waiters}"
                  IsReadOnly="True">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID"
                                    Binding="{Binding WaiterId}"
                                    Width="60" />
				<DataGridTextColumn Header="Imię"
                                    Binding="{Binding FirstName}"
                                    Width="*" />
				<DataGridTextColumn Header="Nazwisko"
                                    Binding="{Binding LastName}"
                                    Width="*" />
				<DataGridTextColumn Header="Telefon"
                                    Binding="{Binding Phone}"
                                    Width="120" />
				<DataGridTextColumn Header="Zatrudniony"
                                    Binding="{Binding HireDate, StringFormat=\{0:yyyy-MM-dd\}}"
                                    Width="120" />
				<DataGridCheckBoxColumn Header="Aktywny"
                                        Binding="{Binding IsActive}"
                                        Width="80" />
			</DataGrid.Columns>
		</DataGrid>

	</shared:ListPageShell>
</UserControl>
